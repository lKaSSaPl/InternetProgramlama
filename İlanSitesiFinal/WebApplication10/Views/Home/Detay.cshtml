@model WebApplication10.Models.İlan
@{
    ViewBag.Title = "Detay";
}

<div class="container">
    <br />
    <div class="row">
        <div class="col-md-8">
            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @{ int i = 0;}
                    @foreach(var item in ViewBag.imgs)
            {
                            <div class="carousel-item active">
                                {
                                i++;
                                var active =i ==1? "active":"";
                                }
                              <img src="/Content/images/@item.ResimAd" class="d-block w-100" alt="..." height="500">
                            </div>
            }
                    
                    <div class="carousel-item">
                        <img src="/Content/images/a2.jpg" class="d-block w-100" alt="..." height="500">
                    </div>
                    <div class="carousel-item">
                        <img src="/Content/images/a3.jpg" class="d-block w-100" alt="..." height="500">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <!--Slider  -->
        <div class="col-md-4">
            <table class="table table-bordered table-striped">
                <tbody>
                    <tr><th colspan="2">İlan Özellikleri</th></tr>
                    <tr><td><strong>İlan No</strong></td><td>@Model.IlanId</td></tr>
                    <tr><td><strong>Şehir</strong></td><td>@Model.SehirId.</td></tr>
                    <tr><td><strong>Durum</strong></td><td>@Model.DurumId</td></tr>
                    <tr><td><strong>İlan Tarihi</strong></td><td>@Model.Tarhi </td></tr>
                    <tr><td><strong>Marka</strong></td><td>@Model.MarkaId</td></tr>
                    <tr><td><strong>Model</strong></td><td>@Model.ModelId</td></tr>
                    <tr><td><strong>Model Yılı</strong></td><td>@Model.ModelYili</td></tr>
                    <tr><td><strong>Kilometre</strong></td><td>@Model.Kilometre</td></tr>
                    <tr><td><strong>Yakıt Türü</strong></td><td>@Model.YakitTuru</td></tr>
                    <tr><td><strong>Vites Türü</strong></td><td>@Model.VitesTuru</td></tr>
                    <tr><td><strong>Açıklama</strong></td><td>@Model.Aciklama</td></tr>
                    <tr><td><strong>Fiyat</strong></td><td style="color:indigo;font-size:18px">@Model.Fiyat $</td></tr>
                    <tr><td><strong>Telefon</strong></td><td><label class="btn btn-success btn-block"><i class="bi bi-telephone-fill"></i> @Model.Telefon</label></td></tr>



                </tbody>
            </table>

        </div>
    </div>

</div>

