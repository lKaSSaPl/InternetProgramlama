@model IEnumerable<İlan_Sitesi.Models.İlan>
@{
    ViewBag.Title = "Index";
}

<div class="container">
    </br>
    <div class="row">
        <!-- Slider -->
        <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/Content/images/araç2.jpg" class="d-block w-100" alt="..." height="500">
                </div>
                <div class="carousel-item">
                    <img src="/Content/images/araç5.jpeg" class="d-block w-100" alt="..." height="500">
                </div>
                <div class="carousel-item">
                    <img src="/Content/images/araç7.jpeg" class="d-block w-100" alt="..." height="500">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            </br>
            <!-- Filtreleme Kısmı -->
            <form class="row">
                <div class="row mb-3">

                    <label for="Text" class="col-sm-4 col-form-label">En Az</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" placeholder="En Az(Fiyat)">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="Text" class="col-sm-4 col-form-label">En Çok</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" placeholder="En Çok(Fiyat)">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="Text" class="col-sm-4 col-form-label">Şehir</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" placeholder="Şehir">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="Text" class="col-sm-4 col-form-label">Durum</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" placeholder="Durum">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="Text" class="col-sm-4 col-form-label">Marka</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" placeholder="Marka">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="Text" class="col-sm-4 col-form-label">Model</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" placeholder="Model">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="Text" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <button type="submit" class="btn btn-outline-primary col-12"><i class="bi bi-search"></i> FİLTRELE</button>
                    </div>
                </div>

            </form>
        </div>

        @foreach (var item in Model)
        {
            var c = 1;
            <div class="col-md-3">
                <br>
                <br>
                <!-- İlan Listesi -->
                <div class="img-thumbnail">
                    @foreach (var rsm in ViewBag.imgs)
                    {
                        if (rsm.İlanId == item.İlanId)
                        {
                            if (c == 1)
                            {
                                <a href="/Home/Detay/@item.İlanId"><img src="/Content/images/@rsm.ResimAd" class="card-img-top" alt="..." height="180"></a>

                            }
                        }
                    }
                    <div class="card-body">
                        <h6 class="card-title">Fiat DOBLO</h6>
                        <h6 class="card-title" style="color:darkblue">Model Yılı:2023 (4000 Km)</h6>
                        <h5 class="card-title" style="color:red">775.000TL</h5>

                    </div>
                </div>
            </div>

        }
    </div>
</div>

